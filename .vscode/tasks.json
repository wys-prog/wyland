{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "g++-14",
      "args": [
        "-fdiagnostics-color=always",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}", 
        "-std=c++23", 
        "-Wall", 
        "-Wextra",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}