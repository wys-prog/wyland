{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file",
      "command": "g++-14",
      "args": [
        "-fdiagnostics-color=always",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-std=c++23",
        "-Wall",
        "-Wextra",
        "-I./{work${workspaceFolder}/runtime", 
        "-I/opt/homebrew/Cellar/boost/1.87.0_1/include",
        //"-march=native", // Optimize for the host machine's CPU
        //"-funroll-loops", // Unroll loops for better performance
        //"-O3",
        
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }, 
    {
      "label": "C/C++: g++ build active file with log",
      "type": "shell",
      "command": "mkdir -p \"${fileDirname}/logs\" && g++-14 -fdiagnostics-color=never \"${file}\" -o \"${fileDirname}/${fileBasenameNoExtension}\" -std=c++23 -Wall -Wextra -march=native -funroll-loops -DNDEBUG -O3 > \"${fileDirname}/logs/${fileBasenameNoExtension}.log\" 2>&1",
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "A detail."
    }
  ],
  
  "version": "2.0.0"
}